<% if current_user %>

<% else %>
  <div class="jumbotron">
    <h2>Welcome to groupio!</h2>
    <p class="lead">
      A place for your organization to organize your work.
    </p>
  </div>

  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-4 col-lg-offset-2 plan">
        <h3>Free Plan</h3>
        <div class="price pull-right">
          <strong>Price: Free</strong>
        </div>
        <div class="features">
          <ul>
            <li>Limited file uploads</li>
            <li>Only 1 project</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'),
                    class:'btn btn-primary sign-up' %>
        </p>
      </div>
      <div class="col-lg-4 plan">
        <h3>Premium Plan</h3>
        <div class="price pull-right">
          <strong>Price: $10/month</strong>
        </div>
        <div class="features">
          <ul>
            <li>Unlimited file uploads</li>
            <li class="extra">Unlimited projects</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'),
                    class:'btn btn-primary sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>
